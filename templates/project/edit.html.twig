{% extends 'base.html.twig' %}

{% block title %} Edit project {% endblock %}

{% block body %}

    <div class="container">

        <h3>Edit project</h3>

        {% include 'partials/errors.html.twig' %}

        <form method="post" action="{{ path('project_update', {project: project.id}) }}">
            <div class="form-group">
                <label for="exampleInputEmail1">Title</label>
                <input type="text" class="form-control" name="title" value="{{ project.title }}" id="exampleInputEmail1" aria-describedby="titleHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Body</label>
                <input type="text" class="form-control" name="body" value="{{ project.body }}" id="exampleInputPassword1" placeholder="">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
{% endblock %}