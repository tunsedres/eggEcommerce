{% extends 'admin_base.html.twig' %}

{% block title %} {{ type }} Blog {% endblock %}

{% block body %}

    <div class="container">

        <h3>{{ type }} blog</h3>

        {% include 'partials/errors.html.twig' %}

        <form method="post" action="{{ type == 'Create' ? path('store_blog') : path('blog_update', {blog: blog.id}) }}">
            <div class="form-group">
                <label for="exampleInputEmail1">Title</label>
                <input type="text" class="form-control" name="title" value="{{ blog.title }}" id="exampleInputEmail1" aria-describedby="titleHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Body</label>
                <textarea class="form-control" name="body" id="editor" cols="30" rows="50">{{ blog.body }}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">{{ type }}</button>
        </form>
    </div>

    {% block javascripts %}
        <script>
            CKEDITOR.replace( 'editor' );
        </script>
    {{ parent() }}

    {% endblock %}

{% endblock %}